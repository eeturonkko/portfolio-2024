---
import { Image } from "astro:assets";
import hero from "../assets/hero.jpg";
import bulkdb from "../assets/bulkdb.jpg";
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import symphony from "../assets/symphony.jpg";
import dailyquote from "../assets/dailyquote.jpg";

const currentYear = new Date().getFullYear();

const projectDetails = [
  {
    image: bulkdb,
    alt: "bulkdb",
    title: "Bulkdb",
    desc: "Bulkdb is a way to track my daily weight and my workouts in a simple and easy way.",
    href: "https://github.com/eeturonkko/bulkdb",
  },
  {
    image: symphony,
    alt: "symphony",
    title: "Symphony",
    desc: "Symphony is a web application designed to enhance your Spotify experience.",
    href: "https://github.com/eeturonkko/symphony",
  },
  {
    image: dailyquote,
    alt: "dailyquote",
    title: "Daily Quote",
    desc: "Daily Quote is a web application that provides you with a daily dose of inspiration and motivation.",
    href: "https://github.com/eeturonkko/daily-quote",
  },
];
---

<Layout title="Erwd - Fullstack web development ">
  <!-- Hero section-->
  <section
    id="about"
    class="hidden md:flex flex-col md:flex-row items-center space-y-6 mx-auto bg-slate-900 text-white"
  >
    <Image
      src={hero}
      alt="sahko"
      class="w-full md:w-1/2 h-auto animate-clip-path-alt"
    />
    <div class="flex flex-col md:w-1/2">
      <h2 class="text-4xl md:text-6xl font-bold my-4 md:my-6">
        Hello, my name is Eetu
      </h2>
      <p class="text-lg md:text-xl font-semibold typewriter-effect">
        I am a Full Stack Web Developer <span
          class="text-red-700 ">/</span
        > Security System Specialist
      </p>
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="bg-white py-12">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2
          class="text-4xl text-slate-900 md:text-5xl font-extrabold text-center"
        >
          My Skills
        </h2>
        <p class="text-gray-600 mt-4">
          A blend of Security Systems Expertise and Full-Stack Web Development
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Security Systems Skills -->
        <div class="bg-gray-100 shadow-md rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">
            Security Systems Expertise
          </h3>
          <ul class="space-y-4">
            <li class="flex items-center">
              <div class="bg-blue-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 21h4v-4h-4v4zm-7-5a4 4 0 114-4h2a4 4 0 11-8 0h2zM14 8h2a4 4 0 110 8h-2m6 4h-2a4 4 0 01-4-4h2a4 4 0 008 0h2a4 4 0 01-4 4zM6 8H4a4 4 0 110-8h2a4 4 0 100 8z"
                  ></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >Access Control Systems (AbloyOS, Flexim 5, Lenel OnGuard)</span
              >
            </li>
            <li class="flex items-center">
              <div class="bg-blue-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 10h18M9 16h6m-6-4h6m-6-4h6m-6 8h6m-6 4h6m-6-8h6m-6-4h6m-6 8h6m-6 4h6"
                  ></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >Alarm Systems Installation & Management (HHL-C)</span
              >
            </li>
            <li class="flex items-center">
              <div class="bg-blue-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 7l1.5 1.5a1.5 1.5 0 001 0l1.5-1.5m-3-2.5v9m18-9v9M13 7h6m-6 4h6M9 16h6m-6 4h6m-6-8h6m-6-4h6m-6 8h6m-6 4h6"
                  ></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >CCTV Systems Installation & Monitoring (Axis, Bosch, Hikvision)</span
              >
            </li>
          </ul>
        </div>

        <!-- Full-Stack Web Development Skills -->
        <div class="bg-gray-100 shadow-md rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">
            Full-Stack Web Development
          </h3>
          <ul class="space-y-4">
            <li class="flex items-center">
              <div class="bg-green-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 2m0-6v6m-6-6v6m4 0l4 4M8 8l-4 4m0 0l4 4M4 12h16"
                  ></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >Frontend Development (HTML, CSS, JavaScript)</span
              >
            </li>
            <li class="flex items-center">
              <div class="bg-green-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 20v-6h4v6m-4-10V4h4v6M8 8H5m6 4h2m-2 4h4"></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >Backend Development (Node.js, Express, APIs, SQL, MongoDB)</span
              >
            </li>
            <li class="flex items-center">
              <div class="bg-green-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >Frameworks & Libraries (Next.js, React, SvelteKit, Astro)</span
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio section-->
  <section id="portfolio" class="bg-gray-100 py-12">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2
          class="text-4xl text-slate-900 md:text-5xl font-extrabold text-center"
        >
          My Projects
        </h2>
        <p class="text-gray-600 mt-4">A selection of my recent work</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
        {projectDetails.map((project) => <Card {...project} />)}
      </div>
    </div>
  </section>

  <!-- Contact section-->
  <section id="contact" class="text-white py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2
          class="text-4xl text-slate-900 md:text-5xl font-extrabold text-center"
        >
          Let's Connect
        </h2>
        <p class="text-gray-600 mt-4">
          Have a question or want to work together? Feel free to reach out!
        </p>
        <p class="text-gray-600">
          I am always open to new opportunities and collaborations.
        </p>
      </div>
      <div
        class="max-w-md mx-auto bg-white text-slate-900 shadow-lg rounded-lg overflow-hidden"
      >
        <div class="px-6 py-8">
          <div
            class="flex items-center justify-center space-x-2 text-slate-600 mb-6"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <span class="text-lg">ronkko.erwd@gmail.com</span>
          </div>
          <div class="flex justify-center space-x-6">
            <a
              href="https://www.linkedin.com/in/eetu-r%C3%B6nkk%C3%B6-433289246/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-blue-700 hover:text-blue-900 transition-colors"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path>
              </svg>
              <span class="sr-only">LinkedIn</span>
            </a>
            <a
              href="https://github.com/eeturonkko"
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-700 hover:text-slate-900 transition-colors"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
              <span class="sr-only">GitHub</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <footer class="bg-slate-900 text-white py-6">
    <div class="container mx-auto text-center space-y-4 md:space-y-2">
      <p>&copy; {currentYear} ERWD</p>
    </div>
  </footer>
</Layout>

<style>
  section {
    scroll-margin-top: 90px;
  }
  @keyframes clipPathAnimationAlt {
    from {
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
    }
    to {
      clip-path: polygon(0 0, 80% 0, 100% 100%, 0% 100%);
    }
  }
  .animate-clip-path-alt {
    animation: clipPathAnimationAlt 0.6s ease-out forwards;
  }

  .typewriter-effect {
    max-width: 58%;
    border-right: 0.15rem solid #b91c1c;
    white-space: nowrap;
    overflow: hidden;
    animation:
      blinking 0.8s infinite,
      typing 1.8s steps(35, end) forwards;
  }

  @keyframes blinking {
    from {
      border-color: transparent;
    }
    50% {
      border-color: #b91c1c;
    }
    to {
      border-color: transparent;
    }
  }

  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }
</style>
