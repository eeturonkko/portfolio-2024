---
import { Image } from "astro:assets";
import hero from "../assets/hero.jpg";
import bulkdb from "../assets/bulkdb.jpg";
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import symphony from "../assets/symphony.jpg";
import dailyquote from "../assets/dailyquote.jpg";

const currentYear = new Date().getFullYear();

const projectDetails = [
  {
    image: bulkdb,
    alt: "bulkdb",
    title: "Bulkdb",
    desc: "Bulkdb is a way to track my daily weight and my workouts in a simple and easy way.",
    href: "https://github.com/eeturonkko/bulkdb",
  },
  {
    image: symphony,
    alt: "symphony",
    title: "Symphony",
    desc: "Symphony is a web application designed to enhance your Spotify experience.",
    href: "https://github.com/eeturonkko/symphony",
  },
  {
    image: dailyquote,
    alt: "dailyquote",
    title: "Daily Quote",
    desc: "Daily Quote is a web application that provides you with a daily dose of inspiration and motivation.",
    href: "https://github.com/eeturonkko/daily-quote",
  },
];
---

<Layout title="Erwd - Fullstack web development ">
  <!-- Hero section-->
  <section
    id="about"
    class="hidden md:flex flex-col md:flex-row items-center space-y-6 mx-auto bg-slate-900 text-white"
  >
    <Image
      src={hero}
      alt="sahko"
      class="w-full md:w-1/2 h-auto animate-clip-path-alt"
    />
    <div class="flex flex-col md:w-1/2">
      <h2 class="text-4xl md:text-6xl font-bold my-4 md:my-8">
        Hello, my name is Eetu
      </h2>
      <p class="text-lg md:text-xl font-semibold typewriter-effect">
        I am a fullstack web developer / Security system specialist
      </p>
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="bg-white py-12">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold">My Skills</h2>
        <p class="text-gray-600 mt-4">
          A blend of Security Systems Expertise and Full-Stack Web Development
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Security Systems Skills -->
        <div class="bg-gray-100 shadow-md rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">
            Security Systems Expertise
          </h3>
          <ul class="space-y-4">
            <li class="flex items-center">
              <div class="bg-blue-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 21h4v-4h-4v4zm-7-5a4 4 0 114-4h2a4 4 0 11-8 0h2zM14 8h2a4 4 0 110 8h-2m6 4h-2a4 4 0 01-4-4h2a4 4 0 008 0h2a4 4 0 01-4 4zM6 8H4a4 4 0 110-8h2a4 4 0 100 8z"
                  ></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >Access Control Systems</span
              >
            </li>
            <li class="flex items-center">
              <div class="bg-blue-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 10h18M9 16h6m-6-4h6m-6-4h6m-6 8h6m-6 4h6m-6-8h6m-6-4h6m-6 8h6m-6 4h6"
                  ></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >Alarm Systems Installation & Management</span
              >
            </li>
            <li class="flex items-center">
              <div class="bg-blue-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 7l1.5 1.5a1.5 1.5 0 001 0l1.5-1.5m-3-2.5v9m18-9v9M13 7h6m-6 4h6M9 16h6m-6 4h6m-6-8h6m-6-4h6m-6 8h6m-6 4h6"
                  ></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >CCTV Systems Installation & Monitoring</span
              >
            </li>
          </ul>
        </div>

        <!-- Full-Stack Web Development Skills -->
        <div class="bg-gray-100 shadow-md rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">
            Full-Stack Web Development
          </h3>
          <ul class="space-y-4">
            <li class="flex items-center">
              <div class="bg-green-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 2m0-6v6m-6-6v6m4 0l4 4M8 8l-4 4m0 0l4 4M4 12h16"
                  ></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >Frontend Development (HTML, CSS, JavaScript)</span
              >
            </li>
            <li class="flex items-center">
              <div class="bg-green-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 20v-6h4v6m-4-10V4h4v6M8 8H5m6 4h2m-2 4h4"></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >Backend Development (Node.js, Express, APIs, SQL, MongoDB)</span
              >
            </li>
            <li class="flex items-center">
              <div class="bg-green-500 text-white p-2 rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
              </div>
              <span class="ml-4 text-lg font-medium"
                >Frameworks & Libraries (Next.js, React, SvelteKit, Astro)</span
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio section-->
  <section id="portfolio" class="bg-gray-100 py-12">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold">My Projects</h2>
        <p class="text-gray-600 mt-4">A selection of my recent work</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
        {projectDetails.map((project) => <Card {...project} />)}
      </div>
    </div>
  </section>

  <!-- Contact section-->
  <section id="contact" class="container mx-auto px-4 py-16">
    <h2 class="text-5xl font-extrabold text-center">Let's Connect</h2>
    <p class="text-center text-lg mt-4 text-gray-500">
      I'd love to hear from you! Whether you have a question or just want to say
      hi, feel free to reach out.
    </p>

    <div class="bg-white shadow-lg rounded-3xl p-8 mt-12 backdrop-blur-md">
      <div
        class="flex flex-col md:flex-row items-start md:items-center md:justify-between space-y-10 md:space-y-0"
      >
        <!-- Contact Form -->
        <div class="w-full md:w-6/12 lg:w-5/12">
          <h3
            class="text-3xl font-bold mb-6 text-center md:text-left text-gray-800"
          >
            Send Me a Message
          </h3>
          <form
            action="https://formspree.io/f/your-form-id"
            method="POST"
            class="space-y-6"
          >
            <div>
              <label for="name" class="block text-lg font-medium text-gray-700"
                >Your Name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full p-4 border border-gray-300 rounded-xl bg-gray-50 text-gray-900 focus:ring focus:ring-red-700"
              />
            </div>
            <div>
              <label for="email" class="block text-lg font-medium text-gray-700"
                >Your Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full p-4 border border-gray-300 rounded-xl bg-gray-50 text-gray-900 focus:ring focus:ring-red-700"
              />
            </div>
            <div>
              <label
                for="message"
                class="block text-lg font-medium text-gray-700"
                >Your Message</label
              >
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full p-4 border border-gray-300 rounded-xl bg-gray-50 text-gray-900 focus:ring focus:ring-red-700"
              ></textarea>
            </div>
            <div class="text-center md:text-left">
              <button
                type="submit"
                class="w-full md:w-auto px-6 py-3 bg-gradient-to-r from-purple-600 to-red-500 text-white font-bold rounded-xl hover:from-purple-700 hover:to-red-600 focus:ring focus:ring-purple-300 transition duration-300"
              >
                Send Message
              </button>
            </div>
          </form>
        </div>

        <!-- Social Media Icons -->
        <div
          class="flex flex-col space-y-6 md:space-y-8 lg:space-y-10 w-full md:w-5/12"
        >
          <h3 class="text-2xl font-bold text-center md:text-left text-gray-800">
            Find Me Online
          </h3>
          <div class="flex justify-center md:justify-start space-x-6">
            <!-- GitHub Icon -->
            <a
              href="https://github.com/eeturonkko"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 transition"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-10 w-10"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M12 0a12 12 0 00-3.8 23.4c.6.1.8-.3.8-.6V20.9c-3.2.7-3.8-1.6-3.8-1.6-.6-1.5-1.5-1.9-1.5-1.9-1.3-.9.1-.9.1-.9 1.5.1 2.2 1.5 2.2 1.5 1.3 2.2 3.4 1.6 4.2 1.2.1-.9.5-1.6 1-2-2.6-.3-5.4-1.3-5.4-5.8 0-1.3.4-2.3 1.2-3.2-.1-.3-.5-1.5.1-3.1 0 0 1-.3 3.3 1.2a11.3 11.3 0 016 0c2.3-1.5 3.3-1.2 3.3-1.2.6 1.6.2 2.8.1 3.1.8.9 1.2 2 1.2 3.2 0 4.5-2.8 5.5-5.4 5.8.6.5 1.1 1.4 1.1 2.8v4.2c0 .3.2.7.8.6A12 12 0 0012 0z"
                ></path>
              </svg>
            </a>

            <!-- LinkedIn Icon -->
            <a
              href="https://www.linkedin.com/in/eeturonkko"
              target="_blank"
              rel="noopener noreferrer"
              class="text-blue-700 dark:text-blue-500 hover:text-blue-900 dark:hover:text-blue-300 transition"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-10 w-10"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M22.2 0H1.8C.8 0 0 .8 0 1.8v20.4C0 23.2.8 24 1.8 24h20.4c1 0 1.8-.8 1.8-1.8V1.8C24 .8 23.2 0 22.2 0zM7.1 20.4H3.6V9.3h3.5v11.1zM5.3 7.7c-1.1 0-2-.9-2-2 0-1.1.9-2 2-2s2 .9 2 2c0 1.1-.9 2-2 2zm15.1 12.7h-3.5v-5.4c0-1.3 0-2.9-1.8-2.9-1.8 0-2 1.4-2 2.8v5.5H9.6V9.3h3.4v1.5h.1c.5-1 1.7-2 3.6-2 3.8 0 4.5 2.5 4.5 5.7v6.8z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <footer class="bg-slate-900 text-white py-6">
    <div class="container mx-auto text-center space-y-4 md:space-y-2">
      <p>&copy; {currentYear} ERWD</p>
    </div>
  </footer>
</Layout>

<style>
  section {
    scroll-margin-top: 90px;
  }
  @keyframes clipPathAnimationAlt {
    from {
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
    }
    to {
      clip-path: polygon(0 0, 80% 0, 100% 100%, 0% 100%);
    }
  }
  .animate-clip-path-alt {
    animation: clipPathAnimationAlt 0.6s ease-out forwards;
  }

  .typewriter-effect {
    max-width: 56%;
    border-right: 0.15rem solid #b91c1c;
    white-space: nowrap;
    overflow: hidden;
    animation:
      blinking 0.8s infinite,
      typing 1.8s steps(35, end) forwards;
  }

  @keyframes blinking {
    from {
      border-color: transparent;
    }
    50% {
      border-color: #b91c1c;
    }
    to {
      border-color: transparent;
    }
  }

  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }
</style>
