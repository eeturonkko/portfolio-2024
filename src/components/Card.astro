---
interface Props {
	image: ImageMetadata;
  alt: string;  
  title: string;
  desc: string;
  href: string;
}
import { Image } from 'astro:assets';
const { image, alt, title, desc, href } = Astro.props;
---


<div class="bg-white shadow-md rounded-lg overflow-hidden hover:scale-105 transition-all hover:cursor-pointer">
  <Image src={image} alt={alt} class="object-fill w-full h-56" />
  <div class="p-6">
      <h3 class="text-lg font-semibold">{title}</h3>
      <p class="text-gray-600 mt-2">{desc}</p>
      <div class="mt-4">
          <a href={href} class="text-blue-500 hover:underline">View Project</a>
      </div>
  </div>
</div>

